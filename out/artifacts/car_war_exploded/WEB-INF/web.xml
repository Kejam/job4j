<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">


    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>job4j.carStrorage.presentation.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>CarListServlet</servlet-name>
        <servlet-class>job4j.carStrorage.presentation.CarListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCarServlet</servlet-name>
        <servlet-class>job4j.carStrorage.presentation.CreateCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCarServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveCarServlet</servlet-name>
        <servlet-class>job4j.carStrorage.presentation.RemoveCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveCarServlet</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCarServlet</servlet-name>
        <servlet-class>job4j.carStrorage.presentation.UpdateCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCarServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewCarServlet</servlet-name>
        <servlet-class>job4j.carStrorage.presentation.ViewCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCarServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>job4j.carStrorage.presentation.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>




</web-app>