<hibernate-mapping>
    <class name="ru.job4j.carStrorage.Car.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <many-to-one name="engine"
                     column="id"
                     class="ru.job4j.carStrorage.Car.Engine"/>
        <many-to-one name="carBody"
                     column="id"
                     class="ru.job4j.carStrorage.Car.CarBody"/>
        <many-to-one name="transmission"
                     column="id"
                     class="ru.job4j.carStrorage.Car.Transmission"/>
    </class>
</hibernate-mapping>